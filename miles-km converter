from tkinter import *

window = Tk()
window.title("Miles to Km Converter")
window.minsize(width=300, height=200)
def convert():
    miles = mile.get()
    km_convert = int(miles) * 1.6
    converted_label.config(text=km_convert)

mile = Entry()
mile.grid(column=1, row=1)

miles_label = Label(text="Miles")
miles_label.grid(column=2, row=1)

equals_label = Label(text="is equal to ")
equals_label.grid(column=0, row=5)

converted_label = Label(text=0)
converted_label.grid(column=1, row=5)

km_label = Label(text="Km")
km_label.grid(column=2, row=5)

calculate = Button(text="Calculate", command=convert)
calculate.grid(column=1, row=6)

window.mainloop()
