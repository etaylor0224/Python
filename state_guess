import pandas as pd
import turtle

screen = turtle.Screen()
screen.title("U.S. States Game")
image = "blank_states_img.gif"
screen.addshape(image)
turtle.shape(image)
game_active = True
df = pd.read_csv("50_states.csv")
correct_guess = 0

def state_name():
    name = turtle.Turtle()
    name .hideturtle()
    name.penup()
    name.goto(coords)
    name.write(state)

while game_active:
    answer_state = screen.textinput(title=f"{correct_guess}/50 States Correct", prompt="What's another state's name?").title()
    for state in df.state:
        if answer_state == state:
            correct = df[df["state"] == answer_state]
            #can do either method below to grab the coords
            coords = (correct.x.item(), correct.y.iloc[0])
            state_name()
            correct_guess += 1
        else:
            pass

turtle.mainloop()

#course method
#converting existing df into course variable
data = df
all_state = data.state.tolist()
if answer_state in all_state:
    t = turtle.Turtle()
    t.hideturtle()
    t.penup()
    state_data = data[data.state == answer_state]
    t.goto(int(state_data.x), int(state_data.y))
    t.write(answer_state)
