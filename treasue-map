line1 = ["⬜️", "️⬜️", "️⬜️"]
line2 = ["⬜️", "⬜️", "️⬜️"]
line3 = ["⬜️️", "⬜️️", "⬜️️"]
map = [line1, line2, line3]
print("Hiding your treasure! X marks the spot.")
position = input()  # Where do you want to put the treasure?
# 🚨 Don't change the code above 👆
# Write your code below this row 👇
top = position[0]
side = position[1]



#easier solution to same problem if statements do. 
#abc = ["a", "b", "c"]
#letter_index = abc.index(top)
#num_index = int(side)-1
#map[num_index][letter_index] = "x"


if top == "A":
    if side == "1":
        map[0][0] = "X"
    elif side == "2":
        map[1][0] = "X"
    elif side == "3":
        map[2][0] = "X"
if top == "B":
    if side == "1":
        map[0][1] = "X"
    elif side == "2":
        map[1][1] = "X"
    elif side == "3":
        map[2][1] = "X"
if top == "C":
    if side == "1":
        map[0][2] = "X"
    elif side == "2":
        map[1][2] = "X"
    elif side == "3":
        map[2][2] = "X"

